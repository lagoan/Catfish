                    {
                        @*string name = string.Empty;

                        name = HttpContext.Current.User.Identity.Name;
                        if (ViewBag.UserName != null)
                        {
                            name = ViewBag.UserName;
                        }
                        name = ViewBag.UserName;

                        @:<p>Welcome, 
                            @name;
                        @:</p>*@

                         @Html.ActionLink("Log off", "Logout", "UserAccount", null, new { @class = "btn btn-default btn-success" });
                    }
                    else
                    {
                        @Html.ActionLink("Log in", "Login", "UserAccount", null, new { @class = "btn btn-default btn-success" });
                    }

                }


            </div>
        </header>
        <div class="wrapper">
            @RenderBody()
        </div>
    </body>
    @RenderSection("script", required: false)
</html>