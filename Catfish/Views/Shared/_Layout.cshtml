<!DOCTYPE html>
<html lang="en">
    <head>
        <title>@ViewBag.Title</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

        @UI.Head()

        <link type="text/css" rel="stylesheet" href="~/content/css/style.css" />

        @RenderSection("head", required: false)
    </head>
    <body>

        <script>
                    require(["./Built/app"]);
        </script>
        <header role="banner">
            <div class="wrapper">
                <a class="site-title" href="~/">@Site.SiteTitle</a>
                <p class="site-desc">@Site.SiteDescription</p>
                <navigation role="main-navigation" style="float:right">
                    @UI.Menu(StopLevel: 1)
                    @UI.Menu(StopLevel: 1, RootNode: "Login");
                    @Html.ActionLink("Login", "Login","UserAccount")
                </navigation>
            </div>
            <div style="float:right">
                @{
                    if (HttpContext.Current.User.Identity.IsAuthenticated)
                    {
                        string name = HttpContext.Current.User.Identity.Name;
                        @:<p>Welcome, 
                            @name;
                        @:</p>
               


                         @Html.ActionLink("Log me out", "Logout", "UserAccount");
                    }

                }


            </div>
        </header>
        <div class="wrapper">
            @RenderBody()
        </div>
    </body>
    @RenderSection("script", required: false)
</html>